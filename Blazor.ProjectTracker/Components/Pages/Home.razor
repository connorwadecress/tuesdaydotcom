@page "/"
@using Blazor.ProjectTracker.Components.SharedComponents

<h3 class="mb-4">Project Overview</h3>

<table class="table table-sm table-bordered">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Projects)
        {
            <tr>
                <td>@p.Title</td>
                <td>@p.Date:yyyy-MM-dd</td>
                <td>
                    @foreach (var tag in p.Tags)
                    {
                        <MudChip Class="me-1 mb-1" Color="Color.Primary" Variant="Variant.Filled">
                            @tag
                        </MudChip>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

